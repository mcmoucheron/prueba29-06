<div class="container mt-3">
  <div class="row">
    <% @tweets.each_slice(3) do |tweets_group| %>
      <div class="col-md-4">
        <div class="card mb-3 h-100">
          <div class="card-body">
            <% tweets_group.each do |tweet| %>
              <h5 class="card-title"><%= tweet.username %></h5>
              <p class="card-text"><%= tweet.description %></p>
              <div class="d-flex justify-content-between">
                <%= link_to "Edit", edit_tweet_path(tweet), class: "btn btn-primary" %>
                <%= button_to "Delete", tweet, class: "btn btn-danger", method: :delete, data: { confirm: "Are you sure you want to delete this tweet?" } %>
              </div>
              <div class="mt-3">
                <small><%= tweet.updated_at.strftime("%Y-%m-%d %H:%M") %></small>
              </div>
              <% if tweet != tweets_group.last %>
                <hr>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="d-flex justify-content-center mt-3">
    <%= link_to "New tweet", new_tweet_path, class: "btn btn-primary me-2" %>
    <nav aria-label="Page navigation">
      <%= raw pagy_nav(@pagy) %>
    </nav>
  </div>
</div>
